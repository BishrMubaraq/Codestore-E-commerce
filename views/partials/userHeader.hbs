<!-- Header -->
<header>
  <!-- Header desktop -->
  <div class="container-menu-desktop">
    <!-- Topbar -->
    <div class="top-bar">
      <div class="content-topbar flex-sb-m h-full container">
        <div class="left-top-bar">
          Free shipping all over India
        </div>

        <div class="right-top-bar flex-w h-full">
          {{#if user}}
          <a href="/user-profile" class="flex-c-m trans-04 p-lr-25">
            {{user.name}}
          </a>
          <a onclick="logoutAlert()" href="#" class="flex-c-m trans-04 p-lr-25">
            Logout
          </a>
          {{else}}
          <a href="#" class="flex-c-m trans-04 p-lr-25">
            My Account
          </a>
          <a href="/signin" class="flex-c-m trans-04 p-lr-25">
            Signin
          </a>
          <a href="/signup" class="flex-c-m trans-04 p-lr-25">
            Signup
          </a>
          {{/if}}
        </div>
      </div>
    </div>

    <div class="wrap-menu-desktop">
      <nav class="limiter-menu-desktop container">

        <!-- Logo desktop -->
        <a href="/" class="logo">

          <img style="width: 10rem;" src="/public/codeStoreImages/codeStore logo.png" alt="IMG-LOGO" />
        </a>

        <!-- Menu desktop -->
        <div class="menu-desktop">
          <ul class="main-menu">
            <li {{#if home}}class="active-menu" {{/if}}>
              <a href="/">Home</a>
            </li>

            <li {{#if shop}}class="active-menu" {{/if}}>
              <a href="/products">Shop</a>
            </li>

            <li {{#if orders}}class="active-menu"{{/if}}>
              <a href="/orders">Orders</a>
            </li>

            <li>
              <a href="/vendor">Sell on CodeStore</a>
            </li>

            <li>
              <a href="#">Contact</a>
            </li>
          </ul>
        </div>

        <!-- Icon header -->
        <div id="icons" class="wrap-icon-header flex-w flex-r-m">
          <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
            <i class="zmdi zmdi-search"></i>
          </div>

          <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" {{#if user}}
            data-notify="{{cartCount}}" {{else}} data-notify="0" {{/if}}>
            <i class="zmdi zmdi-shopping-cart"></i>
          </div>
          {{#if user}}
          <a href="/wishlist" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti"
            data-notify="{{wishlistCount}}">

            <i class="zmdi zmdi-favorite-outline"></i>
          </a>
          {{else}}

          <a href="/wishlist" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti"
            data-notify="0">

            <i class="zmdi zmdi-favorite-outline"></i>
          </a>
          {{/if}}
        </div>
      </nav>
    </div>
  </div>

  <!-- Header Mobile -->
  <div class="wrap-header-mobile">
    <!-- Logo moblie -->
    <div class="logo-mobile">

      <a href="/"><img style="width: 8rem;" src="/public/codeStoreImages/codeStore logo.png" alt="IMG-LOGO" /></a>

    </div>

    <!-- Icon header -->
    <div id="icons1" class="wrap-icon-header flex-w flex-r-m m-r-15">
      <div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 js-show-modal-search">
        <i class="zmdi zmdi-search"></i>
      </div>

      <div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 icon-header-noti js-show-cart" {{#if user}}
        data-notify="{{cartCount}}" {{else}} data-notify="0" {{/if}}>
        <i class="zmdi zmdi-shopping-cart"></i>
      </div>
      {{#if user}}
      <a href="/wishlist" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 icon-header-noti"
        data-notify="{{wishlistCount}}">

        <i class="zmdi zmdi-favorite-outline"></i>
      </a>
      {{else}}
      <a href="/wishlist" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 icon-header-noti"
        data-notify="0">

        <i class="zmdi zmdi-favorite-outline"></i>
      </a>
      {{/if}}

    </div>

    <!-- Button show menu -->
    <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
      <span class="hamburger-box">
        <span class="hamburger-inner"></span>
      </span>
    </div>
  </div>

  <!-- Menu Mobile -->
  <div class="menu-mobile">
    <ul class="topbar-mobile">
      <li>
        <div class="left-top-bar">
          Free shipping for standard order over $100
        </div>
      </li>

      <li>

        <div class="right-top-bar flex-w">
          {{#if user}}
          <a href="/user-profile" class="flex-c-m p-lr-10 trans-04">
            {{user.name}}

          </a>

          <a onclick="logoutAlert()" href="#" class="flex-c-m p-lr-10 trans-04">
            Logout
          </a>
          {{else}}
          <a href="#" class="flex-c-m p-lr-10 trans-04">
            My Account
          </a>

          <a href="/signin" class="flex-c-m p-lr-10 trans-04">
            Signin
          </a>
          <a href="/signup" class="flex-c-m p-lr-10 trans-04">
            Signup
          </a>
          {{/if}}
        </div>
      </li>
    </ul>

    <ul class="main-menu-m">
      <li>
        <a href="/">Home</a>

        <span class="arrow-main-menu-m">
          <i class="fa fa-angle-right" aria-hidden="true"></i>
        </span>
      </li>

      <li>
        <a href="/products">Shop</a>
      </li>

      <li>
        <a href="/orders">Orders</a>
      </li>

      <li>
        <a href="/vendor">Sell on CodeStore</a>
      </li>

      <li>
        <a href="#">Contact</a>
      </li>
    </ul>
  </div>

  <!-- Modal Search -->
  <div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
    <div class="container-search-header">
      <button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
        <img src="/public/assets/images/icons/icon-close2.png" alt="CLOSE" />
      </button>

      <form class="wrap-search-header flex-w p-l-15">
        <button class="flex-c-m trans-04">
          <i class="zmdi zmdi-search"></i>
        </button>
        <input class="plh3" type="text" name="search" placeholder="Search..." />
      </form>
    </div>
  </div>
</header>

<!-- Cart -->
<div class="wrap-header-cart js-panel-cart">
  <div class="s-full js-hide-cart"></div>

  <div class="header-cart flex-col-l p-l-65 p-r-25">
    <div class="header-cart-title flex-w flex-sb-m p-b-8">
      <span class="mtext-103 cl2">
        Your Cart
      </span>

      <div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-cart">
        <i class="zmdi zmdi-close"></i>
      </div>
    </div>

    <div class="header-cart-content flex-w js-pscroll">
      {{#if cartProducts}}
      <ul class="header-cart-wrapitem w-full">
        {{#each cartProducts}}
        <li class="header-cart-item flex-w flex-t m-b-12">
          <div class="header-cart-item-img">
            <img src="/public/product-images/{{this.product.images.[0]}}" alt="IMG" />
          </div>

          <div class="header-cart-item-txt p-t-8">
            <a href="/product-details?id={{this.product._id}}" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
              {{this.product.name}}
            </a>

            <span class="header-cart-item-info">
              {{this.quantity}} x <span
                style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;"> â‚¹
              </span>{{this.product.price}}
            </span>
          </div>
        </li>
        {{/each}}
      </ul>
      <div class="w-full">
        {{else}}
        <div class="header-cart-wrapitem w-full">
          <h3 style="font-weight: 700;" class="text-center">No Cart Items</h3>
          <img class="img-fluid" src="/public/codeStoreImages/cart-empty-illustration.jpg" alt="">
        </div>



        {{/if}}
        <div class="header-cart-buttons flex-w w-full">
          <a href="/cart" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
            View Cart
          </a>
          {{#if cartProducts}}
          <a href="/checkout" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
            Check Out
          </a>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  function logoutAlert() {
    Swal.fire({
      title: 'Are you sure to logout?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes'
    }).then((result) => {
      if (result.isConfirmed) {
        location.href = "/logout"
      }
    })
  }
</script>