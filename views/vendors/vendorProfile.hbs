<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">


        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-pills flex-column flex-md-row mb-3">
                    <li class="nav-item">
                        <a class="nav-link active" href="javascript:void(0);"><i class="bx bx-user me-1"></i>
                            Account</a>
                    </li>
                </ul>
                <div class="card mb-4">
                    <h5 class="card-header">Profile Details</h5>
                    <!-- Account -->
                    <form id="vendorProfile" action="/vendor/profile" method="POST" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="d-flex align-items-start align-items-sm-center gap-4">
                                {{#if vendorData.profile-photo}}
                                <img style="object-fit: cover;"
                                    src="/public/product-images/{{vendorData.profile-photo}}" id="profileImage"
                                    alt="user-avatar" class="d-block rounded" height="100" width="100"
                                    id="uploadedAvatar" />
                                {{else}}
                                <img style="object-fit: cover;" src="/public/codeStoreImages/profile image.jpg"
                                    id="profileImage" alt="user-avatar" class="d-block rounded" height="100" width="100"
                                    id="uploadedAvatar" />
                                {{/if}}
                                <div class="button-wrapper">
                                    <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                                        <span class="d-none d-sm-block">Upload new photo</span>
                                        <i class="bx bx-upload d-block d-sm-none"></i>
                                        <input type="file" id="upload" name="profile-image" class="account-file-input"
                                            hidden accept="image/png, image/jpeg" onchange="viewProfile(event)" />
                                    </label>

                                    <p class="text-muted mb-0">Allowed JPG, GIF or PNG. Max size of 800K</p>
                                </div>
                            </div>
                        </div>
                        <hr class="my-0" />
                        <div class="card-body">

                            <div class="row">
                                <div class="mb-3 col-md-6">
                                    <label for="firstName" class="form-label">Name</label>
                                    <input class="form-control" type="text" id="firstName" name="name"
                                        value="{{vendorData.name}}" autofocus required minlength="3" />
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="lastName" class="form-label">E-mail</label>
                                    <input class="form-control" type="email" name="email" id="email"
                                        value="{{vendorData.email}}" required />
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="email" class="form-label">Mobile Number</label>
                                    <input class="form-control" type="tel" id="mobileNumber" name="mobileNumber"
                                        value="{{vendorData.mobileNumber}}" required minlength="10" maxlength="10" />
                                </div>
                                <div class=" mb-3 col-md-6">
                                    <label for="organization" class="form-label">Bussiness Name</label>
                                    <input type="text" class="form-control" id="bussinessName" name="bussinessName"
                                        value="{{vendorData.bussinessName}}" required />
                                </div>

                            </div>
                            <div class="mt-2">
                                <button type="submit" class="btn btn-primary me-2">Save changes</button>
                                <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                            </div>
                    </form>
                </div>
                <!-- /Account -->
            </div>
            <div class="card">
                <h5 class="card-header">Delete Account</h5>
                <div class="card-body">
                    <div class="mb-3 col-12 mb-0">
                        <div class="alert alert-warning">
                            <h6 class="alert-heading fw-bold mb-1">Are you sure you want to delete your account?
                            </h6>
                            <p class="mb-0">Once you delete your account, there is no going back. Please be certain.
                            </p>
                        </div>
                    </div>
                    <form id="formAccountDeactivation" onsubmit="return false">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" name="accountActivation"
                                id="accountActivation" />
                            <label class="form-check-label" for="accountActivation">I confirm my account
                                deactivation</label>
                        </div>
                        <button type="submit" class="btn btn-danger deactivate-account">Deactivate Account</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    let profileImage = document.getElementById('profileImage')
    function viewProfile(event) {
        profileImage.src = URL.createObjectURL(event.target.files[0])
    }
</script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript"
    src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>
<script>
    $("#vendorProfile").validate();
</script>